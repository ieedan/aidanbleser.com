{
	"name": "www",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently -p \"[{name}]\" -n \"POSTS,VITE\" -c \"blue.bold,green.bold\" \"pnpm build:posts --watch\" \"vite dev\"",
		"build": "pnpm build:posts && vite build",
		"preview": "pnpm build:posts && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"build:posts": "pnpm dlx tsx ./scripts/build-posts.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@fontsource-variable/inter": "^5.1.1",
		"@fontsource/share-tech-mono": "^5.1.1",
		"@sveltejs/adapter-vercel": "^5.6.1",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.1.0",
		"clsx": "^2.1.1",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.15.0",
		"lucide-svelte": "^0.475.0",
		"mode-watcher": "^0.5.1",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"runed": "^0.23.3",
		"shiki": "^2.3.2",
		"svelte": "^5.20.0",
		"svelte-check": "^4.1.4",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0",
		"vaul-svelte": "1.0.0-next.3",
		"vite": "^6.1.0"
	},
	"dependencies": {
		"@shikijs/markdown-it": "^2.3.2",
		"@tailwindcss/typography": "^0.5.15",
		"@types/markdown-it": "^14.1.2",
		"concurrently": "^9.1.2",
		"markdown-it": "^14.1.0"
	}
}
