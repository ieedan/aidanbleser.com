{
	"name": "www",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently -p \"[{name}]\" -n \"POSTS,VITE\" -c \"blue.bold,green.bold\" \"pnpm build:posts --watch\" \"vite dev\"",
		"build": "pnpm build:posts && vite build",
		"preview": "pnpm build:posts && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"build:posts": "tsx ./scripts/build-posts.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@fontsource-variable/inter": "^5.2.5",
		"@fontsource/share-tech-mono": "^5.2.5",
		"@lukulent/svelte-umami": "^0.0.4",
		"@sveltejs/adapter-vercel": "^5.6.3",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"autoprefixer": "^10.4.21",
		"bits-ui": "1.3.10",
		"clsx": "^2.1.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.1.0",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.479.0",
		"mode-watcher": "^0.5.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"runed": "^0.24.0",
		"shiki": "^3.2.1",
		"svelte": "^5.22.6",
		"svelte-check": "^4.1.5",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1",
		"vaul-svelte": "1.0.0-next.3",
		"vite": "^6.2.1"
	},
	"dependencies": {
		"@shikijs/markdown-it": "^3.2.1",
		"@tailwindcss/typography": "^0.5.16",
		"@types/markdown-it": "^14.1.2",
		"concurrently": "^9.1.2",
		"markdown-it": "^14.1.0",
		"tsx": "^4.19.3"
	}
}
